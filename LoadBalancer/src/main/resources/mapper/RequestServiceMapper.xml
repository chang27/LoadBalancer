<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.uci.dao.RequestServiceDao">

    <resultMap id="RequestMapper" type="com.uci.mode.Request">
        <result column="id" property="id"/>
        <result column="ip" property="ip"/>
        <result column="port" property="port"/>
        <result column="type" property="type"/>
        <result column="path" property="path"/>
        <result column="params" property="params"/>
        <result column="retry_times" property="retryTimes"/>
        <result column="remark" property="remark"/>
        <result column="status" property="status"/>
    </resultMap>

    <insert id="insertRequest" parameterType="com.uci.mode.Request" useGeneratedKeys="true" keyProperty="id">
        INSERT into tb_request (ip, port, type, path, params, retry_times, reark, status)
   		value (#{ip},#{port}, #{type}, #{path},#{params},#{retry_times}, #{remark},#{status})
    </insert>

    <insert id="insertFailure" parameterType="com.uci.mode.FailureRequest">
        INSERT into tb_request_failure(request_id, ip, port, remark) value (#{requestId},#{ip}, #{port}, #{remark})
    </insert>

    <select id="queryAllFinishRequest" parameterType="com.uci.mode.ServerInstance" resultMap="RequestMapper">
        SELECT id, ip, port, type, path, params, retry_times, remark, status from tb_request where ip = #{ip} and port = #{port}
    </select>

    <update id="updateRequest" parameterType="com.uci.mode.Request">
        update tb_request
        <set>
            <if test="ip!= null">ip=#{ip}</if>
            <if test="port!= null">port=#{port}</if>
            <if test="retryTimes!= null">retry_times=#{retryTimes}</if>
            <if test="status!= null">ip=#{status}</if>
        </set>
    </update>

</mapper>